{
  "name": "js-study-project",
  "version": "1.0.0",
  "author": "Anatoliy Vershinin",
  "main": "gulpfile.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:A-Vershinin/js-study.git"
  },
  "bugs": {
    "url": "git@github.com:A-Vershinin/js-study.git"
  },
  "homepage": "https://github.com/A-Vershinin/js-study.git",
  "license": "ISC",
  "scripts": {
    "test": "editorconfig-tools check *",
    "eslint": "eslint --format node_modules/eslint-friendly-formatter app/js",
    "lint:js": "eslint ./app",
    "build": "gulp dev",
    "start": "gulp"
  },
  "devDependencies": {
    "browser-sync": "2.11.2",
    "css-mqpacker": "^5.0.1",
    "del": "^2.2.2",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.1.3",
    "eslint-friendly-formatter": "^3.0.0",
    "eslint-plugin-import": "^2.2.0",
    "gulp": "git+https://git@github.com/gulpjs/gulp.git#4.0",
    "gulp-autoprefixer": "^3.1.0",
    "gulp-cheerio": "^0.6.2",
    "gulp-concat": "2.6.0",
    "gulp-concat-css": "^2.2.0",
    "gulp-copy": "0.0.2",
    "gulp-csscomb": "^3.0.8",
    "gulp-csso": "^2.0.0",
    "gulp-eslint": "^3.0.1",
    "gulp-load-plugins": "1.2.0",
    "gulp-notify": "2.2.0",
    "gulp-plumber": "^1.1.0",
    "gulp-postcss": "^6.4.0",
    "gulp-rename": "^1.2.2",
    "gulp-replace": "^0.5.4",
    "gulp-sass": "2.2.0",
    "gulp-sourcemaps": "^2.6.0",
    "gulp-uglifyjs": "^0.6.2",
    "gulp-uncss": "^1.0.6"
  },
  "dependencies": {
    "babel-core": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "jquery": "^3.2.0",
    "normalize.css": "^7.0.0"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "airbnb-base",
      "prettier"
    ],
    "env": {
      "es6": true,
      "browser": true,
      "node": true,
      "jquery": true
    },
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "modules": true,
        "generators": false,
        "jsx": true,
        "objectLiteralDuplicateProperties": false
      }
    },
    "globals": {
      "$": true,
      "jQuery": true
    },
    "rules": {
      "no-debugger": 0,
      "no-console": 0,
      "no-alert": 0,
      "no-tabs": 0,
      "no-var": 0,
      "no-empty": 1,
      "no-undef": 1,
      "no-shadow": 0,
      "no-plusplus": [
        "error",
        {
          "allowForLoopAfterthoughts": true
        }
      ],
      "no-unused-vars": 0,
      "space-before-function-paren": [
        "error",
        {
          "anonymous": "ignore",
          "named": "ignore",
          "asyncArrow": "ignore"
        }
      ],
      "func-names": 1,
      "quotes": [
        "error",
        "double"
      ],
      "indent": 0,
      "prefer-template": 1,
      "semi": [
        1,
        "always"
      ],
      "padded-blocks": [
        "error",
        "never"
      ],
      "no-use-before-define": [
        1,
        {
          "functions": false,
          "classes": true
        }
      ],
      "no-trailing-spaces": [
        "error",
        {
          "skipBlankLines": true
        }
      ],
      "prefer-arrow-callback": [
        1,
        {
          "allowNamedFunctions": false,
          "allowUnboundThis": false
        }
      ]
    },
    "strict": [
      "2",
      "never"
    ]
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  }
}
